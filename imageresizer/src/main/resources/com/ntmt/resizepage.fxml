<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ntmt.ResizeController">
    <center>
    <VBox spacing = "30.0" prefHeight="200.0" prefWidth="100.0" alignment="CENTER">
         <children>
            <Button prefWidth="100" fx:id="button1" text="Single file size" onAction="#goToSF" />
            <Button prefWidth="100" fx:id="button2" text="Single pixels" onAction="#goToSP" />
            <Button prefWidth="100" fx:id="button3" text="Batch file size" onAction="#goToBF" />
            <Button prefWidth="100" fx:id="button4" text="Batch pixels" onAction="#goToBP" />
         </children>
      </VBox>
    </center>
    <right>
        <VBox alignment="BOTTOM_RIGHT">
            <children>
                <Button fx:id="button5" text="Home" onAction="#goToHome"/>
            </children>
        </VBox>
    </right>
</BorderPane>
